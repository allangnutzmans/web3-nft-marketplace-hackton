generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model PingDummy {
    id String @id @default(cuid())
}

model NFTItem {
    id          String     @id @default(cuid())
    metadataCid String     @unique // IPFS CID
    price       Decimal    // Price in ETH
    isActive    Boolean    @default(true)
    createdAt   DateTime   @default(now())
    updatedAt   DateTime   @updatedAt
    purchases   Purchase[]
}

model Purchase {
    id            String        @id @default(cuid())
    nftItemId     String
    buyerAddress  String
    amount        Decimal       // Amount paid in ETH
    txHash        String?       // Purchase transaction hash
    status        PurchaseStatus @default(PENDING)
    tokenId       Int?          // Token ID when minted
    mintTxHash    String?       // Mint transaction hash
    refundTxHash  String?       // Refund transaction hash
    createdAt     DateTime      @default(now())
    updatedAt     DateTime      @updatedAt
    
    nftItem       NFTItem       @relation(fields: [nftItemId], references: [id])
    
    @@index([buyerAddress])
    @@index([status])
}

enum PurchaseStatus {
    PENDING
    APPROVED
    REJECTED
}
